%
    a = b
    a^2 = b^2
    a^2 - b^2 = ab - b^2
    ( a + b )( a - b ) = b( a - b )
    a + b = b
    a + a = a
    2a = a
    2 = 1
		-- Perle di Saggezza, Roma - La Sapienza
%
    1 = 1
    -1 = -1
    sqrt(-1/1) = sqrt(1/-1)
    sqrt(-1) = 1/sqrt(-1)
    (sqrt(-1))^2 = 1
    -1 = 1
